# =============================================================================
# AI Copilot Wallet - Environment Configuration
# =============================================================================
# Uses PostgreSQL for persistent storage and external Mysten Labs APIs
# =============================================================================

# Application
PORT=3001
NODE_ENV=development

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=replace-with-bot-token
TELEGRAM_WEBHOOK_SECRET=replace-with-secret
WEBHOOK_BASE_URL=https://caishen.iseethereaper.com

# AI/NLP Configuration
GOOGLE_AI_API_KEY=replace-with-gemini-key
GEMINI_MODEL=gemini-2.0-flash

# Sui Network
SUI_RPC_URL=https://fullnode.testnet.sui.io:443
USER_SERVICE_URL=http://user-service:3005
TX_SERVICE_URL=http://transaction-builder:3003

# Session Management
SESSION_SECRET=replace-with-session-secret

# =============================================================================
# PostgreSQL Database Configuration
# =============================================================================
POSTGRES_USER=caishen
POSTGRES_PASSWORD=changeme_strong_password
POSTGRES_DB=caishen_wallet
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Full connection string (used by services)
# For Docker: uses service name 'postgres'
DATABASE_URL=postgresql://caishen:changeme_strong_password@postgres:5432/caishen_wallet
# For local dev (uncomment):
# DATABASE_URL=postgresql://caishen:changeme_strong_password@localhost:5432/caishen_wallet

# =============================================================================
# zkLogin Configuration (External Mysten Labs APIs)
# =============================================================================
# No local prover needed - saves ~200MB RAM

# Salt Service (Mysten Labs hosted)
ZKLOGIN_SALT_SERVICE_URL=https://salt.api.mystenlabs.com/get_salt

# ZK Prover Service
# Testnet/Development:
ZKLOGIN_PROVER_URL=https://prover-dev.mystenlabs.com/v1
# Mainnet (uncomment for production):
# ZKLOGIN_PROVER_URL=https://prover.mystenlabs.com/v1

# OAuth Configuration (for zkLogin)
GOOGLE_CLIENT_ID=replace-with-google-client-id
# GOOGLE_CLIENT_SECRET not needed for public clients (SPA/mobile)

# Optional: Additional OAuth Providers (Phase 2)
# FACEBOOK_CLIENT_ID=replace-with-facebook-client-id
# APPLE_CLIENT_ID=replace-with-apple-client-id

# On-chain contract IDs (Sui testnet)
SMART_CONTRACT_PACKAGE_ID=0xa7e134eed9b3728fef06aa1cd14a4e6f056c890b28e857afcb3aaeb1cebd17f9
CONTACT_REGISTRY_ID=0x42809277bb22831bd04f8e8c7cf506335d71f5885d3e14c31083a34eaad40bf3
